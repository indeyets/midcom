<?xml version="1.0" encoding="UTF-8"?>
<Schema xmlns="http://www.midgard-project.org/repligard/1.4">
    <type name="net_nemein_rss_feed" table="net_nemein_rss_feed" parent="midgard_topic" parentfield="node">
        <property name="id" type="integer" primaryfield="id"/>
        <property name="title" type="string"/>
        <property name="url" type="string"/>
        <property name="node" link="midgard_topic:id" reverse="no" type="integer" parentfield="node"/>
        <property name="defaultauthor" link="midgard_person:id" reverse="no" type="integer"/>
        <!-- Whether to keep items removed from the feed -->
        <property name="keepremoved" type="boolean"/>
        <!-- Whether to auto-approve new items from feed -->
        <property name="autoapprove" type="boolean"/>
        
        <!-- cached data -->
        <property name="latestupdate" type="integer"/>
        <property name="latestfetch" type="integer"/>
        <!-- /cached data -->
        
        <!-- required 1.7 metadata -->        
        <property name="revised" type="string"/>
        <property name="revision" type="integer"/>
        <property name="created" type="string"/>
        <property name="creator" link="midgard_person:id" reverse="no" type="integer"/>
        <property name="revisor" link="midgard_person:id" reverse="no" type="integer"/>
        <!-- /required metadata -->        
    </type>
</Schema>