<?xml version="1.0" encoding="UTF-8"?>
<Schema xmlns="http://www.midgard-project.org/repligard/1.4">
    <type name="cc_kaktus_todo_item" table="cc_kaktus_todo_item">
        <property name="id" type="integer" primaryfield="id" />
        <property name="up" type="integer" />
        <property name="topic" type="integer" link="midgard_topic:id" reverse="no" />
        <property name="title" type="text" />
        <property name="deadline" type="string" />
        <property name="description" type="text" />
        
        <!-- flagging the item -->
        <property name="flag" type="integer" />
        
        <!-- status of the progress  -->
        <property name="status" type="integer" />
        
        <!-- level of importance -->
        <property name="priority" type="integer" />
        
        <!-- ordering score -->
        <property name="score" type="integer" />
        
        <property name="gid" link="midgard_grp:id" reverse="no" type="integer" />
        <property name="pid" link="midgard_person:id" reverse="no" type="integer" />
        
        <!-- required metadata -->        
        <property name="revised" type="string" />
        <property name="revision" type="integer" />
        <property name="created" type="string" />
        <property name="creator" link="midgard_person:id" reverse="no" type="integer" />
        <property name="revisor" link="midgard_person:id" reverse="no" type="integer" />
        <!-- /required metadata -->        
    </type>
</Schema>
