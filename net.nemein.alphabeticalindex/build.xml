<?xml version="1.0"?>
<project name="MidCOM" default="dummy" basedir=".">
<!-- plan:
	target scaffold is the one that will create a 
	new module directory
	It will:
	a) create the module directory (and fail if it exists)
	b) create the config,handler,midcom,style and doc subdirs.
	c) generate a simple manifest.inc file.
	d) generate simple view.php and admin.php files
	
	todo:
	create targets for handling modules outside the offcial repository.
	
-->
	
	<target name="package">

	</target>
	
	<target name="checksetup">
		
	</target>
	<target name="dummy">
		<echo>Usage: 
		phing scaffold -Dmodule=net.example.componentname
		</echo>
	</target>
	<!-- this task creates a new project -->
	<target name="scaffold" depends="resolve_module_to_dir">
		<property name="template_dir" value="scaffold" />
		<phingcall target="create_module" />

	</target>
	
	<target name="resolve_module_to_dir" >
		<php function="str_replace" returnProperty="module_dir_basic">
			<param value="."/>
			<param value="/"/>
  		    <param value="net.nemein.alphabeticalindex"/>
		</php>
		<!-- it is practical to have the basic moduledir for expansion in the files -->
		<property name="module_dir" value="net/nemein/alphabeticalindex"/>
		<php function="str_replace" returnProperty="module_class">
			<param value="."/>
			<param value="_"/>
  		    <param value="net.nemein.alphabeticalindex"/>
		</php>
		<php function="date" returnProperty="currentDate" >
			<param value="Y-M-D" />
		</php>
			
		<available 
			file="${basedir}/net.nemein.alphabeticalindex" 
			property="module_dir_exists" 
			value="yes" 
			type="dir"
		/>
	</target>
	
	<target name="create_module" if="module_dir" unless="module_dir_exists">
		<mkdir dir="net.nemein.alphabeticalindex"/>
		<mkdir dir="net.nemein.alphabeticalindex/config"/>
		<mkdir dir="net.nemein.alphabeticalindex/documentation"/>
		<mkdir dir="net.nemein.alphabeticalindex/midcom"/>
		<mkdir dir="net.nemein.alphabeticalindex/handler"/>
		<mkdir dir="net.nemein.alphabeticalindex/style" />
		<mkdir dir="net.nemein.alphabeticalindex/locale" />
		<mkdir dir="net.nemein.alphabeticalindex/static" />
		
		<input propertyname="module_description" 
			defaultValue="MidCOM module net.nemein.alphabeticalindex"
			>
			Enter module description:
		</input>
		
		<copy todir="net.nemein.alphabeticalindex">
			 <filterchain>
                <expandproperties/>
             </filterchain>
			<fileset dir="scaffold/" >
				<include name="*.php" />
				<include name="*.xml" />
				<exclude name="build.xml"/>
			</fileset>
		</copy>
		
		<copy todir="net.nemein.alphabeticalindex/config">
			 <filterchain>
                <expandproperties/>
             </filterchain>
			<fileset dir="scaffold/config/">
				<include name="*.inc" />
			</fileset>
		</copy>

		<copy todir="net.nemein.alphabeticalindex/documentation">
			 <filterchain>
                <expandproperties/>
             </filterchain>
			<fileset dir="scaffold/documentation">
				<include name="CHANGES" />
			</fileset>
		</copy>
		<copy todir="net.nemein.alphabeticalindex/midcom">
			 <filterchain>
                <expandproperties/>
             </filterchain>
			<fileset dir="scaffold/midcom">
				<include name="*.php" />
			</fileset>
		</copy>
		<copy todir="net.nemein.alphabeticalindex/handler">
			 <filterchain>
                <expandproperties/>
             </filterchain>
			<fileset dir="scaffold/handler">
				<include name="*.php" />
			</fileset>
		</copy>
		<copy todir="net.nemein.alphabeticalindex/style">
			<filterchain>
            	<expandproperties/>
			</filterchain>
			<fileset dir="scaffold/style">
				<include name="*.php" />
			</fileset>
		</copy>
		<copy todir="net.nemein.alphabeticalindex/locale">
			<filterchain>
            	<expandproperties/>
			</filterchain>
			<fileset dir="scaffold/locale">
				<include name="default.*.txt" />
			</fileset>
		</copy>
	</target>
</project>
	
